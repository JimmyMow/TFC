


<html lang = "en" class = "signin-html">
  <head>
    <meta charset = "utf-8">
    <title>Sign In - The Fan's Challenge</title>
    <meta name = "viewport" content = "width=device-width, initial-scale=1.0">
    <meta name = "description" content = "The Fan's Challenge Sign-In Page">
    <meta name = "author" content = "Harsha Murthy">
  </head>

<body class = "tfc-body">
    <header class = "tfc-header">
      The Fan's <span class ="red-highlight">Challenge</span>
    </header>
   <iframe width="560" height="315" src="http://www.youtube.com/embed/Pikd-9qqQ1c" frameborder="0" allowfullscreen></iframe>
<div class='sign-in-float'>
  <div class="container">
      <%= field_set_tag(nil, :class => "signin-fieldset") do %>
        <%= form_tag(session_url, :method => :post, :class => "tfc-form") do %>
          <%= text_field_tag(:username, nil, :class => "input-block-level", :placeholder => "Username") %>
          <%= password_field_tag(:password, nil, :class => "input-block-level", :placeholder => "Password") %>
          <%= submit_tag("Sign In", :class => "btn btn-large signin-btn btn-inverse") %>
          <%= link_to("Sign Up", new_user_url, :class => "btn btn-large signup-btn btn-danger") %>
        <% end %>
      <% end %>
    </div>
  </div>
  </body>
</html>

<h1>Editing Comment #<%= @comment.id %></h1>


<%= form_tag(comment_url(@comment), method: 'put') do %>

  <div>
    <%= label_tag :user_comment %><br />
    <%= text_area_tag :user_comment, @comment.user_comment %>
  </div>

  <div>
    <%= label_tag :call_id %><br />
    <%= number_field_tag :call_id, @comment.call_id %>
  </div>

  
  <div>
    <%= submit_tag "Update Comment" %>
  </div>

<% end %>

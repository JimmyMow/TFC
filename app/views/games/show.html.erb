<br/ >
<br/ >

<p>
  <h1 class='event'><%= link_to @game.event %></h1>
</p>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th class='table_head'>Commit Player</th>
      <th class='table_head'>Commit Team</th>
      <th class='table_head'>Fouled Player</th>
      <th class='table_head'>Fouled Team</th>
      <th class='table_head'>Game</th>
      <th class='table_head'>Ref</th>
      <th class='table_head'>Foul type</th>
      <th class='table_head'>Quarter</th>
      <th class='table_head'>Time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @game.calls.each do |game| %>
    <tr>
      <td><%= game.comit_player.name %></td>
      <td><%= game.comit_player.team.name %></td>
      <td><%= game.fouled_player.name %></td>
      <td><%= game.fouled_player.team.name %></td>
      <td><%= game.game.event %></td>
      <td><%= game.ref.name %></td>
      <td><%= game.foul.fouls_type %></td>
      <td><%= game.quarter %></td>
      <td><%= game.time %></td>

      <td>
        <%= form_tag votes_url, method: 'post' do %>
          <%= hidden_field_tag :user_id, session[:user_id] %>
          <%= hidden_field_tag :call_id, game.id %>
          <%= button_tag 'Disagree', :class => 'btn btn-danger' %>
        <% end %>
      </td>

      <td>
        <%= form_tag upvotes_url, method: 'post' do %>
          <%= hidden_field_tag :user_id, session[:user_id] %>
          <%= hidden_field_tag :call_id, game.id %>
          <%= button_tag 'Agree', :class => 'btn btn-success' %>
        <% end %>
      </td>


    </tr>
  <% end %>
  </tbody>
</table>



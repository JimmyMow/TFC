<h1>New Text</h1>


<%= form_tag(texts_url, method: 'post') do %>


  <div>
    <%= label_tag :comment %><br />
    <%= text_area_tag :comment %>
  </div>

  <div>
    <%= label_tag :call_id %><br />
    <%= number_field_tag :call_id %>
  </div>


  <div>
    <%= submit_tag "Create Text" %>
  </div>
<% end %>

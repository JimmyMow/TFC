<h1>Editing Ref #<%= @ref.id %></h1>


<%= form_tag(ref_url(@ref), method: 'put') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @ref.name %>
  </div>

  <div>
    <%= label_tag :number %><br />
    <%= number_field_tag :number, @ref.number %>
  </div>

  <div>
    <%= label_tag :game_id %><br />
    <%= number_field_tag :game_id, @ref.game_id %>
  </div>

  
  <div>
    <%= submit_tag "Update Ref" %>
  </div>

<% end %>
